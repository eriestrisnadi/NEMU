{
  "name": "NEMU",
  "version": "0.0.1",
  "main": "main.js",
  "license": "MIT",
  "author": {
    "email": "me@eries.id",
    "name": "Eries Trisnadi",
    "url": "https://eries.id"
  },
  "description": "NES Emulator for Windows, MacOS, Linux",
  "dependencies": {
    "electron-log": "^2.2.14",
    "electron-updater": "^2.20.1",
    "path": "^0.12.7",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "electron": "^1.7.12",
    "electron-builder": "^19.55.3",
    "npm-run-all": "^4.1.2"
  },
  "build": {
    "appId": "com.saruaho.app",
    "mac": {
      "category": "public.app-category.games"
    },
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    }
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "build": "run-s \"builder {@}\" --",
    "builder": "electron-builder",
    "electron": "electron main.js"
  }
}
